{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testMatch": [
    "**/?(*.)spec.ts"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@app/(.*)$": "<rootDir>/src/$1",
    "^modules/(.*)$": "<rootDir>/src/modules/$1",
    "^infrastructure/(.*)$": "<rootDir>/src/infrastructure/$1",
    "^config/(.*)$": "<rootDir>/src/config/$1"
  }
}